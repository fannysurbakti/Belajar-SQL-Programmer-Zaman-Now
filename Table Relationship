Membuat Table dengan Foreign Key
CREATE TABLE whishlist
(
    id          INT         NOT NULL AUTO_INCREMENT,
    id_product  VARCHAR(10) NOT NULL,
    description TEXT,
    PRIMARY KEY (id),
    CONSTRAINT fk_whishlist_product
        FOREIGN KEY (id_product) REFERENCES products (id)
 ) ENGINE = InnoDB;
 
 Menambah/Menghapus Foreign Key
 ALTER TABLE whishtlist
      DROP CONSTRAINT fk_whishlist_product;
      
 ALTER TABLE whishlist;
    ADD CONSTRAINT fk_whishlist_product
        FOREIGN KEY (id_product) REFERENCES products (id);
        
 Mengubah Behavior Menghapus Relasi
 ALTER TABLE whishtlist
    ADD CONSTRAINT fk_whishlist
      FOREIGN KEY (id_product) REFERENCES products (id)
        ON DELETE CASCADE ON UPDATE CASCADE;
